@model SnowboardProject.Models.User

 <a asp-area="" asp-controller="Main" asp-action="UserDetails" asp-route-userID = "@Model.id">
<div class="card text-white bg-dark mb3 " style="width: 18rem;">
    <div class="card-body">
    <p id = "id" class="card-title">User ID: @Model.id</p>

    <p class="card-text">User Email: @Model.UserEmail</p>
    <p class="card-text">UserName: @Model.UserName</p>

    <ul>
        @foreach (Resort resort in @Model.ListOfFavoriteResorts)
        {
            <li>
                <p>Resort Name: @resort.ResortName</p>
            </li>
        }



    </ul>

 



    </div>

    </a>